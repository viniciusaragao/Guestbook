@{
    ViewBag.Title = "List";
}
<h2>My Guestbook Entries</h2>
<p>
    @Html.ActionLink("Add a new entry","Create","Guestbook")
</p>
@foreach (var entry in ViewBag.Entries)
{
    <section class="contact">
        <header>
            <h3>@entry.Message</h3>
        </header>
        <p>
            Posted by @entry.Name on @entry.DateAdded.ToLongDateString()
        </p>
    </section>
}
